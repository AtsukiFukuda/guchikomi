<div class= "container2">
     <div class= "my-page">
          <h2>MyPage</h2>
          <% if @user.image_url.present? %>
               <%= image_tag @user.image_url, :size => '150x150', class: 'img_fluid rounded-circle' %>
          <% end %>
          <p class="pt-3">・ニックネーム：<%= @user.name %></p>
          <p class="pt-3">・プロフィール</p>
          <p><%= @user.profile %></p>
          <p></p>
          
          <% if @user.id == current_user.id %>
               <%= link_to "ユーザ情報を編集する", edit_user_registration_path, class: "btn btn-primary" %>
          <% end %>
          <br><br><br><br>
     </div>
          <h3 class="pt-3">"共感👍"した投稿</h3>
          <div class="posts-container">
                    <% @user.liked_posts.each do |post| %>
                         <div class="balloon4">
                              <p><%= post.body %></p>
                              <% if post.user.present? %>
                              <p>（投稿者：<%= post.user.name %>さん）</p>
                              <% end %>
                         </div>
                    <% end %>
          </div>
          <br><br>
          <h3 class="pt-3">"私も好きです❤️"した投稿</h3>
          <div class="posts-container">
                    <% @user.cheered_posts.each do |post| %>
                         <div class="balloon4">
                              <p><%= post.body %></p>
                              <% if post.user.present? %>
                              <p>（投稿者：<%= post.user.name %>さん）</p>
                              <% end %>
                         </div>
                    <% end %>
          </div>
          <br>
          <br>
          <div class= "my-page">
          <hr>
          <%= link_to "戻る", :back, class: "btn btn-primary" %>
          </div>
          <br><br>
    
</div>
